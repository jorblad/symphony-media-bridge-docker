{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "labels": ["dependencies"],
  "docker": { "enabled": true },
  "packageRules": [
    {
      "matchDatasources": ["github-tags"],
      "matchPackageNames": ["finos/SymphonyMediaBridge"],
      "groupName": "Symphony Media Bridge",
      "versioning": "loose",
      "automerge": false
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ubuntu"],
      "groupName": "Ubuntu base image",
      "automerge": false
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": ["ARG SMB_VERSION=(?<currentValue>.+)"],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "finos/SymphonyMediaBridge"
    }
  ]
}